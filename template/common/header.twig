<!DOCTYPE html>
<html
    dir="{{ direction }}" lang="{{ lang }}">
<head>
  <meta charset="UTF-8"/>
  <meta content="width=device-width, initial-scale=1" name="viewport">
  <meta content="IE=edge" http-equiv="X-UA-Compatible">
  <title>{{ title }}</title>
  <base href="{{ base }}"/>
  {% if description %}
    <meta name="description" content="{{ description }}"/>
  {% endif %}
  {% if keywords %}
    <meta name="keywords" content="{{ keywords }}"/>
  {% endif %}
  {#        <script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script> #}
  <link href="catalog/view/theme/qel-theme/stylesheet/stylesheet.css" rel="stylesheet">
  {% for style in styles %}
    <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
  {% endfor %}
  {% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
  {% endfor %}
  {#        <script src="catalog/view/javascript/common.js" type="text/javascript"></script> #}
  {% for link in links %}
    <link href="{{ link.href }}" rel="{{ link.rel }}"/>
  {% endfor %}
  {% for analytic in analytics %}
    {{ analytic }}
  {% endfor %}
</head>
<body>
<div class="wrapper">
  <header class="header">
    <div class="container">
      <div class="header__wrapper">
        <div class="logo">
          <a href="{{ home }}">
            <svg width="122" height="60" aria-hidden="true">
              <use xlink:href="catalog/view/theme/qel-theme/image/sprite_auto.svg#icon-logo"></use>
            </svg>
          </a>
        </div>

        <div class="search">
          {{ search }}
        </div>

        <ul class="user-list">
          <li class="user-list__item">
            <a href="{{ compare }}" class="user-list__link" id="compare-total" title="{{ text_compare }}">иконка
              сравнения</a>
          </li>
          <li class="user-list__item">
            <a href="{{ wishlist }}" class="user-list__link" id="wishlist-total" title="{{ text_wishlist }}">иконка
              избранного</a>
          </li>
          <li class="user-list__item">
            <a class="user-list__link" href="{{ account }}" title="{{ text_account }}">
              <span>{{ text_account }}</span>
            </a>
            <ul>
              {% if logged %}
                <li>
                  <a href="{{ account }}">{{ text_account }}</a>
                </li>
                <li>
                  <a href="{{ order }}">{{ text_order }}</a>
                </li>
                <li>
                  <a href="{{ transaction }}">{{ text_transaction }}</a>
                </li>
                <li>
                  <a href="{{ logout }}">{{ text_logout }}</a>
                </li>
              {% else %}
                <li>
                  <a href="{{ register }}">{{ text_register }}</a>
                </li>
                <li>
                  <a href="{{ login }}">{{ text_login }}</a>
                </li>
              {% endif %}
            </ul>
          </li>
        </ul>

        <div class="basket">
          <a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}">
            <span>{{ text_shopping_cart }}</span>
          </a>
        </div>

        <div>
          //- main menu  {{ menu }}
        </div>
      </div>
    </div>

</header>

